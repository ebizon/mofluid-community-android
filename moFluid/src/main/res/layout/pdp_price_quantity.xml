    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingTop="6dp"
        android:layout_weight="400"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_pdp_price_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtv_pdp_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_level_twopoint"
                android:text="@string/price"/>

            <TextView
                android:id="@+id/txtv_pdp_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$120.99"
                android:layout_toEndOf="@id/txtv_pdp_price_text"
                android:layout_marginStart="10dp"
                android:textColor="@color/font_pdp_product_name"
                android:layout_centerVertical="true"
                android:textSize="@dimen/font_size_level_two"/>

        </RelativeLayout>

        <TextView
            android:layout_toEndOf="@+id/txtv_pdp_price"
            android:id="@+id/txtv_pdp_special_price"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$12.99"
            android:textColor="@color/pdp_price_color"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/login_text_size"/>

        <TextView
            android:id="@+id/txtv_pdp_price_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_discount"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/font_size_level_two"/>

        <TextView
            android:id="@+id/txtv_pdp_price_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/out_of_stock"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/font_size_level_two"/>

    </LinearLayout>

    <ProgressBar
