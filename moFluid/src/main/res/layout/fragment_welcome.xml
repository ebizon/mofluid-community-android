<?xml version="1.0" encoding="utf-8"?>
<com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:padding="15dp"
       >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/font_size_level_two"
                android:gravity="center_vertical"
                android:textColor="@color/font_black_color"
                android:text="@string/billing_address"/>
            <LinearLayout
                android:id="@+id/ll_edit_billing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="1dp"
                android:layout_alignParentEnd="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/txtV_edit"
                android:layout_marginEnd="10dp"
                android:src="@drawable/edit_ship_bill"/>
            <TextView
                android:id="@+id/txtV_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/font_size_level_two"
                android:textColor="@color/font_black_color"
                android:text="@string/edit_"/>
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_billing_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/show_billing_adress_details"
            ></include>
            </LinearLayout>
        <TextView
            android:id="@+id/txtV_billing_default_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_default_address_found"
            android:textColor="@color/font_color_black_light"
            android:textSize="@dimen/font_size_level_two"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_verticle_line"
           android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            ></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/font_size_level_two"
                android:textColor="@color/font_black_color"
                android:text="@string/shiping_address"/>
            <LinearLayout
                android:id="@+id/ll_edit_shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="1dp"
                android:layout_alignParentEnd="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/txtV_edit_shiping"
                android:layout_marginEnd="10dp"
                android:src="@drawable/edit_ship_bill"/>
            <TextView
                android:id="@+id/txtV_edit_shiping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/font_size_level_two"
                android:textColor="@color/font_black_color"
                android:text="@string/edit_"/>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_shipping_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/show_shiping_address_detail"
            ></include>
            </LinearLayout>
        <TextView
            android:id="@+id/txtV_shipping_default_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_default_address_found"
            android:textColor="@color/font_color_black_light"
            android:textSize="@dimen/font_size_level_two"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_verticle_line"
            android:layout_marginTop="5dp"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:weightSum="2">
            <TextView
                android:id="@+id/txtV_change_passwordt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custome_btn_background"
                android:padding="@dimen/padding_app_txt_btn"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/font_white_color"
                android:textSize="@dimen/font_size_level_one"
                android:text="@string/change_passsword"/>
            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@null"
                ></View>
            <TextView
                android:id="@+id/txtV_my_downloads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custome_btn_background"
                android:padding="@dimen/padding_app_txt_btn"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/font_white_color"
                android:textSize="@dimen/font_size_level_one"
                android:text="@string/my_downloads"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:weightSum="2">
            <TextView
                android:id="@+id/txtV_my_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custome_btn_background"
                android:padding="@dimen/padding_app_txt_btn"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/font_white_color"
                android:textSize="@dimen/font_size_level_one"
                android:text="@string/my_order"/>
            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@null"
                ></View>
            <TextView
                android:id="@+id/txtV_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custome_btn_background"
                android:padding="@dimen/padding_app_txt_btn"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/font_white_color"
                android:textSize="@dimen/font_size_level_one"
                android:text="@string/logout"/>

        </LinearLayout>



</LinearLayout>
    </ScrollView>
    </com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout>