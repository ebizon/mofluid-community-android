<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dip"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_marginBottom="1dp">

     <TextView
        android:id="@+id/lblListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:paddingBottom="@dimen/child_margin"
        android:paddingStart="@dimen/child_margin_left"
        android:paddingTop="@dimen/child_margin"
         android:paddingEnd="@dimen/child_margin_left"
        android:textSize="@dimen/font_size_slide_menu_child" 
        android:textColor="#1c1c1c"
        android:text="Child Item"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/ivGroupIndicatore"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow_right_white"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"/>

</RelativeLayout>