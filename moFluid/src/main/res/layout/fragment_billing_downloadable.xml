<?xml version="1.0" encoding="utf-8"?>
<com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_left"
                android:paddingEnd="@dimen/padding_right"
                android:paddingTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/txtV_please_fill_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:textDirection="anyRtl"
                        android:text="@string/please_fill_the_form"
                        android:textColor="@color/font_black_color"
                        android:textSize="@dimen/font_size_heading"/>
                    <TextView
                        android:id="@+id/txtV_billing_address_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/billing_address"
                        android:textAlignment="viewStart"
                        android:textDirection="anyRtl"
                        android:textColor="@color/font_color_black_light"
                        android:textSize="@dimen/font_size_heading"
                        android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"/>
                    <TextView
                        android:id="@+id/txtV_first_address_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/display_first_name"
                        android:textAlignment="viewStart"
                        android:textDirection="anyRtl"
                        android:textColor="@color/font_color_black_light"
                        android:textSize="@dimen/font_size_level_two"
                        android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"/>
                    <EditText
                        android:id="@+id/edt_first_name_d"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_edittext"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textDirection="anyRtl"
                        android:textColor="@color/font_color_black_light"
                        android:textSize="@dimen/font_size_level_two"
                        android:padding="@dimen/padding_font_edit_text"
                        android:background="@drawable/rounded_shape_border_billing_shipping"
                        android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"/>
                    <TextView
                        android:id="@+id/txtV_last_name_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/display_last_name"
                        android:textColor="@color/font_color_black_light"
                        android:textSize="@dimen/font_size_level_two"
                        android:textAlignment="viewStart"
                        android:textDirection="anyRtl"
                        android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"/>
                    <EditText
                        android:id="@+id/edt_last_name_d"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_edittext"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textDirection="anyRtl"
                        android:textColor="@color/font_color_black_light"
                        android:textSize="@dimen/font_size_level_two"
                        android:padding="@dimen/padding_font_edit_text"
                        android:background="@drawable/rounded_shape_border_billing_shipping"
                        android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"/>
                    <TextView
                        android:id="@+id/txtV_contact_number_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewStart"
                        android:textDirection="anyRtl"
                        android:text="@string/display_contact_no"
                        android:textColor="@color/font_color_black_light"
                        android:textSize="@dimen/font_size_level_two"
                        android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"/>
                    <EditText
                        android:id="@+id/edt_contact_number_d"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_edittext"
                        android:singleLine="true"
                        android:textColor="@color/font_color_black_light"
                        android:textSize="@dimen/font_size_level_two"
                        android:inputType="phone"
                        android:padding="@dimen/padding_font_edit_text"
                        android:textAlignment="viewStart"
                        android:textDirection="anyRtl"
                        android:background="@drawable/rounded_shape_border_billing_shipping"
                        android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"/>
                    <TextView
                        android:id="@+id/txtV_email_address_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/display_email_address"
                        android:textColor="@color/font_color_black_light"
                        android:textSize="@dimen/font_size_level_two"
                        android:textAlignment="viewStart"
                        android:textDirection="anyRtl"
                        android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"
                        android:visibility="gone"/>
                    <EditText
                        android:id="@+id/edt_email_address_d"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_edittext"
                        android:singleLine="true"
                        android:visibility="gone"
                        android:textAlignment="viewStart"
                        android:textDirection="anyRtl"
                        android:padding="@dimen/padding_font_edit_text"
                        android:textColor="@color/font_color_black_light"
                        android:textSize="@dimen/font_size_level_two"
                        android:background="@drawable/rounded_shape_border_billing_shipping"
                        android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"/>
                    <TextView
                        android:id="@+id/txtV_address_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/display_address"
                        android:textColor="@color/font_color_black_light"
                        android:textSize="@dimen/font_size_level_two"
                        android:textAlignment="viewStart"
                        android:textDirection="anyRtl"
                        android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"/>
                    <EditText
                        android:id="@+id/edt_address_d"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:padding="@dimen/padding_font_edit_text"
                        android:inputType="textMultiLine"
                        android:textColor="@color/font_color_black_light"
                        android:textSize="@dimen/font_size_level_two"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:textDirection="anyRtl"
                        android:background="@drawable/rounded_shape_border_billing_shipping"
                        android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"/>
                    <TextView
                        android:id="@+id/txtV_city_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/display_city"
                        android:textAlignment="viewStart"
                        android:textDirection="anyRtl"
                        android:textColor="@color/font_color_black_light"
                        android:textSize="@dimen/font_size_level_two"
                        android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"/>
                    <EditText
                        android:id="@+id/edt_city_d"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_edittext"
                        android:singleLine="true"
                        android:textColor="@color/font_color_black_light"
                        android:textSize="@dimen/font_size_level_two"
                        android:padding="@dimen/padding_font_edit_text"
                        android:textAlignment="viewStart"
                        android:textDirection="anyRtl"
                        android:background="@drawable/rounded_shape_border_billing_shipping"
                        android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txtV_country_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/display_country"
                    android:textAlignment="viewStart"
                    android:textDirection="anyRtl"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"
                    android:background="@drawable/rounded_shape_border_billing_shipping">
                    <Spinner
                        android:id="@+id/spinner_country_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_color_black_light"
                        android:textSize="@dimen/font_size_level_two"
                        android:spinnerMode="dropdown"
                        android:prompt="@string/app_name"
                        android:textAlignment="viewStart"
                        android:textDirection="anyRtl"
                        android:paddingEnd="0dp"
                        android:paddingStart="0dp"
                        android:theme="@android:style/Theme.Holo.Light"
                        >
                    </Spinner>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtV_satate_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_state"
                    android:textAlignment="viewStart"
                    android:textDirection="anyRtl"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"/>
                <LinearLayout
                    android:id="@+id/ll_spnr_state_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"
                    android:background="@drawable/rounded_shape_border_billing_shipping">
                    <Spinner
                        android:id="@+id/spinner_state_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_color_black_light"
                        android:textSize="@dimen/font_size_level_two"
                        android:spinnerMode="dropdown"
                        android:textAlignment="viewStart"
                        android:textDirection="anyRtl"
                        android:prompt="@string/app_name"
                        android:paddingEnd="0dp"
                        android:paddingStart="0dp"
                        android:theme="@android:style/Theme.Holo.Light"
                        >
                    </Spinner>
                </LinearLayout>
                <EditText
                    android:id="@+id/edt_billing_state_d"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext"
                    android:singleLine="true"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:padding="@dimen/padding_font_edit_text"
                    android:textAlignment="viewStart"
                    android:textDirection="anyRtl"
                    android:visibility="gone"
                    android:background="@drawable/rounded_shape_border_billing_shipping"
                    android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"/>
                <TextView
                    android:id="@+id/txtV_zip_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/display_zipcode"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:textAlignment="viewStart"
                    android:textDirection="anyRtl"
                    android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"
                    />
                <EditText
                    android:id="@+id/edt_zip_d"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext"
                    android:singleLine="true"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:padding="@dimen/padding_font_edit_text"
                    android:textAlignment="viewStart"
                    android:layoutDirection="locale"
                    android:background="@drawable/rounded_shape_border_billing_shipping"
                    android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"/>

                <TextView
                    android:layout_marginBottom="35dp"
                    android:id="@+id/txtV_submit_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_app_text_btn"
                    android:background="@drawable/custome_btn_background"
                    android:padding="@dimen/padding_app_txt_btn"
                    android:gravity="center"
                    android:textDirection="anyRtl"
                    android:textColor="@color/font_white_color"
                    android:textSize="@dimen/font_size_heading"
                    android:text="@string/display_submit"/>
            </LinearLayout>

        </ScrollView>
    </android.support.design.widget.CoordinatorLayout>
</com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout>