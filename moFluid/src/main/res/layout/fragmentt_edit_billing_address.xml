<?xml version="1.0" encoding="utf-8"?>
<com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtV_please_fill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:text="@string/billing_address"
            android:background="@color/bg_home_grey_color"
            android:padding="@dimen/padding_top_header_text"
            android:textColor="@color/font_black_color"
            android:textSize="@dimen/font_size_heading"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_left"
                android:paddingEnd="@dimen/padding_right"
                android:visibility="visible">
                <TextView
                    android:id="@+id/txtV_billing_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_address"
                    android:textColor="@color/font_black_color"
                    android:textSize="@dimen/font_size_level_one"
                    android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"/>
                <TextView
                    android:id="@+id/txtV_first_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/display_first_name"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"/>
                <EditText
                    android:id="@+id/edt_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext"
                    android:singleLine="true"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:padding="@dimen/padding_font_edit_text"
                    android:textAlignment="viewStart"
                    android:paddingStart="10dp"
                    android:inputType="textCapWords"
                    android:background="@drawable/rounded_shape_border_billing_shipping"
                    android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"/>
                <TextView
                    android:id="@+id/txtV_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/display_last_name"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"/>
                <EditText
                    android:id="@+id/edt_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext"
                    android:singleLine="true"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:padding="@dimen/padding_font_edit_text"
                    android:background="@drawable/rounded_shape_border_billing_shipping"
                    android:textAlignment="viewStart"
                    android:paddingStart="10dp"
                    android:inputType="textCapWords"
                    android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"/>
                <TextView
                    android:id="@+id/txtV_contact_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/display_contact_no"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"/>
                <EditText
                    android:id="@+id/edt_contact_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext"
                    android:padding="@dimen/padding_font_edit_text"
                    android:singleLine="true"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:inputType="phone"
                    android:textAlignment="viewStart"
                    android:paddingStart="10dp"
                    android:background="@drawable/rounded_shape_border_billing_shipping"
                    android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"/>
                <TextView
                    android:id="@+id/txtV_email_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/display_email_address"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"/>
                <EditText
                    android:id="@+id/edt_email_address"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext"
                    android:singleLine="true"
                    android:text="email address"
                    android:padding="@dimen/padding_font_edit_text"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:textAlignment="viewStart"
                    android:paddingStart="10dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/rounded_shape_border_billing_shipping"
                    android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"
                    />
                <TextView
                    android:id="@+id/txtV_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/display_address"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"/>
                <EditText
                    android:id="@+id/edt_address"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:padding="@dimen/padding_font_edit_text"
                    android:inputType="textMultiLine"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:paddingStart="10dp"
                    android:background="@drawable/rounded_shape_border_billing_shipping"
                    android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"/>
                <TextView
                    android:id="@+id/txtV_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/display_city"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"/>
                <EditText
                    android:id="@+id/edt_city"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext"
                    android:singleLine="true"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:padding="@dimen/padding_font_edit_text"
                    android:textAlignment="viewStart"
                    android:paddingStart="10dp"
                    android:inputType="textCapWords"
                    android:background="@drawable/rounded_shape_border_billing_shipping"
                    android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"/>

                <TextView
                    android:id="@+id/txtV_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/display_country"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"
                    android:background="@drawable/rounded_shape_border_billing_shipping">
                    <Spinner
                        android:id="@+id/spinner_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_color_black_light"
                        android:textSize="@dimen/font_size_level_two"
                        android:spinnerMode="dropdown"
                        android:textAlignment="viewStart"
                        android:prompt="@string/app_name"
                        android:paddingEnd="0dp"
                        android:paddingStart="0dp"
                        android:theme="@android:style/Theme.Holo.Light"
                        >
                    </Spinner>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtV_satate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/state"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"/>
                <LinearLayout
                    android:id="@+id/ll_spnr_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"
                    android:background="@drawable/rounded_shape_border_billing_shipping">
                    <Spinner
                        android:id="@+id/spinner_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_color_black_light"
                        android:textSize="@dimen/font_size_level_two"
                        android:textAlignment="viewStart"
                        android:spinnerMode="dropdown"
                        android:prompt="@string/app_name"
                        android:paddingEnd="0dp"
                        android:paddingStart="0dp"
                        android:theme="@android:style/Theme.Holo.Light"
                        >
                    </Spinner>
                </LinearLayout>
                <EditText
                    android:id="@+id/edt_billing_state"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext"
                    android:singleLine="true"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:padding="@dimen/padding_font_edit_text"
                    android:visibility="visible"
                    android:hint="@string/enter_state"
                    android:textAlignment="viewStart"
                    android:paddingStart="10dp"
                    android:inputType="textCapWords"
                    android:background="@drawable/rounded_shape_border_billing_shipping"
                    android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"/>
                <TextView
                    android:id="@+id/txtV_zip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zipcode"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"
                    />
                <EditText
                    android:id="@+id/edt_zip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext"
                    android:singleLine="true"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:padding="@dimen/padding_font_edit_text"
                    android:textAlignment="viewStart"
                    android:paddingStart="10dp"
                    android:inputType="textCapWords"
                    android:background="@drawable/rounded_shape_border_billing_shipping"
                    android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"/>
                <TextView
                    android:layout_marginBottom="35dp"
                    android:id="@+id/txtV_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_app_text_btn"
                    android:background="@color/btn_buy_now"
                    android:padding="@dimen/padding_app_txt_btn"
                    android:gravity="center"
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/font_size_level_one"
                    android:text="@string/update_"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout>