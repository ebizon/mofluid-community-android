<com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">
    <LinearLayout
        android:id="@+id/ll_show_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        >
        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" />
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_show_progress_bar"
        >
        <ScrollView
            android:id="@+id/scroll_bar_show_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:visibility="visible">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_white"
                android:paddingTop="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:visibility="visible">

                    <!-- <TextView
                         android:id="@+id/txtV_pro_name"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textColor="@color/font_black_color"
                         android:text="Product Name"
                         android:textSize="@dimen/font_size_heading"/>-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="visible">
                        <ProgressBar
                            android:id="@+id/progressBar_imgLoading"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content" />
                        <include layout="@layout/pdp_product_detail_wishlist"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:id="@+id/product_name"></include>

                        <android.support.v4.view.ViewPager
                            android:id="@+id/viewPager_banner"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/default_mofluid"
                            android:visibility="gone"/>
                        <RelativeLayout
                            android:id="@+id/rl_pdp_images_product"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/product_name"
                            android:paddingBottom="@dimen/padding_pdp_layouts"
                            android:paddingTop="@dimen/padding_pdp_layouts">
                            <include layout="@layout/pdp_images_product" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/bg_home_grey_color"
                        android:layout_marginTop="10dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">
                        <TextView
                            android:id="@+id/txtV_verticle_line"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:background="@color/bg_home_grey_color"
                            android:layout_marginEnd="10dp"/>
                        <TextView
                            android:id="@+id/txtV_is_instock"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/in_stock"
                            android:layout_toEndOf="@+id/txtV_verticle_line"
                            android:textSize="@dimen/font_size_heading"
                            android:textColor="@color/font_green_color"
                            android:gravity="center"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_toStartOf="@+id/txtV_verticle_line">
                            <TextView
                                android:id="@+id/txtV_groped"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:text="@string/grouped"
                                android:visibility="gone"
                                android:textSize="@dimen/font_size_heading"
                                android:textColor="@color/font_red_color"
                                android:layout_marginEnd="10dp"/>

                            <TextView
                                android:id="@+id/txtV_group_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtV_groped"
                                android:textColor="@color/font_color_black_light"
                                android:text="@string/item_text"/>
                        </RelativeLayout>

                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/bg_home_grey_color"
                        android:layout_marginTop="0dp"
                        />
                    <TextView
                        android:id="@+id/txtV_descripton_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/description_header"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/font_size_level_one"
                        android:textColor="@color/font_black_color"
                        />
                    <TextView
                        android:id="@+id/txtV_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/description_value"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/font_color_black_light"
                        />

                </LinearLayout>
                <!--   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/rl_picode">
                       <include layout="@layout/row_validate_pincode"></include>
                   </RelativeLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:scrollbars="none"
                    android:background="@color/bg_home_grey_color"
                    android:orientation="vertical">
                    <ListView
                        android:id="@+id/gridV_grouped_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:numColumns="@integer/column_number"
                        android:horizontalSpacing="10dp"
                        android:verticalSpacing="10dp"
                        android:background="@color/bg_home_grey_color"
                        android:listSelector="@color/bg_white"
                        android:layout_marginTop="1dp"
                        android:smoothScrollbar="true"
                        android:fadingEdge="none"
                        android:paddingStart="8dp"
                        android:paddingBottom="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="8dp"
                        >
                    </ListView>
                </LinearLayout>
                <!--  <include layout="@layout/related_layout_container"
                      android:layout_height="wrap_content"
                      android:layout_width="match_parent"
                      android:id="@+id/grouped_relatedProducts_layout"
                      ></include>-->
            </LinearLayout>
        </ScrollView>
        <TextView
            android:id="@+id/txtV_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:paddingBottom="0dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/custome_btn_background"
            android:textColor="@color/font_white_color"
            android:textSize="@dimen/font_size_level_one"
            android:clickable="false"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="end|bottom"
            android:visibility="gone"
            android:text="@string/add_to_cart"/>
    </FrameLayout>

</com.desarrollodroide.libraryfragmenttransactionextended.SlidingRelativeLayout>