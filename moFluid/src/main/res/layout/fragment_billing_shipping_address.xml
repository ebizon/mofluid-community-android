                    </Spinner>
                </LinearLayout>
                <EditText
                    android:id="@+id/edt_billing_state"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext"
                    android:singleLine="true"
                    android:textColor="@color/font_color_black_light"
                    android:textSize="@dimen/font_size_level_two"
                    android:padding="@dimen/padding_font_edit_text"
                    android:visibility="gone"
                    android:textAlignment="viewStart"
                    android:textDirection="anyRtl"
                    android:background="@drawable/rounded_shape_border_billing_shipping"
                    android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"/>
                <TextView
