                        android:padding="@dimen/padding_font_edit_text"
                        android:textAlignment="viewStart"
                        android:textDirection="anyRtl"
                        android:background="@drawable/rounded_shape_border_billing_shipping"
                        android:layout_marginTop="@dimen/margin_top_edittext_billing_shipping"/>
