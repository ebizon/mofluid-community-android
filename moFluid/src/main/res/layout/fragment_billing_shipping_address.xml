                    android:id="@+id/radio_btn_shipping_different"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_edittext"
                    android:layout_marginTop="@dimen/margin_top_textview_billing_shipping"
                    android:gravity="center_vertical"
                    android:textAlignment="viewStart"
                    android:textDirection="anyRtl"
                    android:textColor="@color/font_white_color"
                    android:background="@drawable/rounded_border_checkbox"
                    android:text="@string/display_shipping_different"/>
