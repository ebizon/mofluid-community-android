<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:paddingTop="0dp"
        android:visibility="gone"
        android:id="@+id/ll_headerid">

        <TextView
            android:id="@+id/txtV_pro_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_heading"
            android:textColor="@color/font_black_color"
            android:paddingStart="@dimen/padding_left"
            android:paddingEnd="@dimen/padding_right"
            android:text="Product name"/>

        <TextView
            android:id="@+id/txtV_pro_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_heading"
            android:textColor="@color/font_red_color"
            android:text="$ 989.98"
            android:paddingStart="@dimen/padding_left"
            android:paddingEnd="@dimen/padding_right"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_home_grey_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_left"
            android:paddingEnd="@dimen/padding_right"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txtV_pro_additional_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_heading"
                android:textColor="@color/font_black_color"
                android:layout_marginTop="20dp"
                android:text="@string/additional_information"/>

            <TextView
                android:id="@+id/txtV_pro_additional_info_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_level_two"
                android:textColor="@color/font_color_black_light"
                android:text="$ 989.98"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:layout_marginTop="0dp"
        android:paddingStart="@dimen/padding_left"
        android:paddingEnd="@dimen/padding_right"
        android:paddingTop="0dp">
        <TextView
            android:id="@+id/txtV_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_label"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/font_color_black_light"
            android:textSize="@dimen/font_size_level_two"
            android:background="@drawable/border_bottom_right"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtV_label__value"
            android:layout_weight="1"
            android:textColor="@color/font_color_black_light"
            android:textSize="@dimen/font_size_level_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:singleLine="true"
            android:background="@drawable/border_bootom_black"
            android:text="@string/txt_value"/>
    </LinearLayout>
    </LinearLayout>