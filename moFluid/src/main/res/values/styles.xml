    <style name="Login_Field_Content" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Card_Field_Content" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:inputType">number</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="Login_Error_Message" parent="@android:style/TextAppearance.Medium">
        <item name="android:text">@string/error_message</item>
        <item name="android:textColor">@color/ErrorMessageColor</item>
        <item name="android:gravity">end</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Error_Message" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/HintColor</item>
        <item name="android:gravity">end</item>
        <item name="android:visibility">visible</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Login_Icon" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/icon_padding</item>
        <item name="android:tint">@color/ThemeColor</item>
    </style>

    <style name="Icon" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">.3</item>
        <item name="android:tint">@color/ThemeColor</item>
        <item name="android:padding">@dimen/icon_padding</item>
    </style>


    <style name="Button_Style" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/field_content_size</item>
        <!--<item name="android:elevation">@dimen/elevation</item>-->
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="Slogan_Icon" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/icon_padding</item>
    </style>

    <style name="Receipt_Field_Layout" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_marginStart">20dp</item>-->
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <!-- <item name="android:layout_marginEnd">10dp</item>-->
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Line" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <!-- <item name="android:layout_marginStart">10dp</item>-->
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <!-- <item name="android:layout_marginEnd">10dp</item>-->
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/HistoryLineColor</item>
    </style>
    <!-- facebook button-->
    <style name="Facebook">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>

        <!--suppress NewApi -->
        <item name="android:textSize">@dimen/font_size_level_one</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FacebookButton">
        <item name="android:clickable">true</item>
    </style>

    <style name="FacebookButton.Blue">
        <item name="android:background">#415dae</item>
    </style>

    <style name="FacebookButton.Blue.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_login_button</item>
        <item name="android:layout_marginTop">15dp</item>
        <!-- <item name="android:padding">@dimen/padding_app_txt_btn</item>-->
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Facebook.Blue">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="Facebook.Blue.Text">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:drawableLeft">@drawable/fb</item>
    </style>

    <!--gmailButton-->

    <style name="GmailButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>

        <!--suppress NewApi -->
        <item name="android:textSize">@dimen/font_size_level_one</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GmailLayout">
        <item name="android:clickable">true</item>
    </style>

    <style name="GmailLayout.Blue">
        <item name="android:background">#f00</item>
    </style>

    <style name="GmailLayout.Blue.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_login_button</item>
        <item name="android:layout_marginTop">10dp</item>
        <!-- <item name="android:padding">@dimen/padding_app_txt_btn</item>-->
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="GmailButton.Blue">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="GmailButton.Blue.Text">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:drawableLeft">@drawable/googleplus</item>
    </style>

    <style name="Mofluid.Base.Widget.AppCompat.RatingBar.Indicator" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_star</item>
        <item name="android:indeterminateDrawable">@drawable/rating_star</item>

        <item name="android:isIndicator">true</item>
        <item name="android:thumb">@null</item>
    </style>

    <style name="App_EditTextStyle">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">anyRtl</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/btn_pressed_color</item>
        <item name="colorButtonNormal">@color/btn_normal_color</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/bg_white</item>
        <item name="android:textSize">@dimen/font_btn_size</item>
        <item name="android:layout_height">@dimen/btn_height</item>
    </style>

    <dimen name="font_btn_size">14sp</dimen>
    <dimen name="btn_height">50dp</dimen>

    <!--Common properties in slideshow image-->
    <style name="imageSlideShow">
        <item name="pageColor">@color/circle_indicator_page_background</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/circle_indicator_page_background</item>
        <item name="snap">true</item>
    </style>

    <!--Styling related to CirclePageIndicator below the Banner Slideshow in HomeFragment-->
    <style name="homeBannerSlideshow" parent="imageSlideShow">
        <item name="android:background">@color/circle_indicator_background</item>
        <item name="fillColor">@color/Black</item>
    </style>

    <!--Styling related to CirclePageIndicator in SimpleProductFragment2.java -->
    <style name="productPageSlideshow" parent="imageSlideShow">
        <item name="fillColor">@color/circle_indicator_product_fill_color</item>
    </style>

    <!-- Horizontal divider with 1 dp height-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>

</resources>
